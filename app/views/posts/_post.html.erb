<div class="container border border-black mt-3">
    <%= link_to user_post_path(@user.id, post.id), :action => 'go' do %>
        <p class="display-4">Post #<%= post.id %></p>
    <% end %>
    <p> <%= post.title %></p>
    <p><%= post.text %></p>
    <p>Likes: <%= post.likes_counter %></p>
    <p>Comments: <%= post.comment_counter %></p>
</div>
